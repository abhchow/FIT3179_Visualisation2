{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "Energy Consumption by Source", "fontSize": 18},
    "width": "container",
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/abhchow/FIT3179_Visualisation2/main/data/transpose_pop_energy.csv"
    },
    "params": [
        {
            "name": "Country",
            "value": "Australia",
            "bind": {
                "input": "select",
                "options": [
                    "Algeria",
                    "Argentina",
                    "Australia",
                    "Austria",
                    "Azerbaijan",
                    "Bangladesh",
                    "Belarus",
                    "Belgium",
                    "Brazil",
                    "Bulgaria",
                    "Canada",
                    "Chile",
                    "China",
                    "Colombia",
                    "Croatia",
                    "Cyprus",
                    "Czechia",
                    "Denmark",
                    "Ecuador",
                    "Estonia",
                    "Finland",
                    "France",
                    "Germany",
                    "Greece",
                    "Hungary",
                    "Iceland",
                    "India",
                    "Indonesia",
                    "Iraq",
                    "Ireland",
                    "Israel",
                    "Italy",
                    "Japan",
                    "Kazakhstan",
                    "Kuwait",
                    "Latvia",
                    "Lithuania",
                    "Luxembourg",
                    "Malaysia",
                    "Mexico",
                    "Morocco",
                    "Netherlands",
                    "New Zealand",
                    "North Macedonia",
                    "Norway",
                    "Oman",
                    "Pakistan",
                    "Peru",
                    "Philippines",
                    "Poland",
                    "Portugal",
                    "Qatar",
                    "Romania",
                    "Russia",
                    "Saudi Arabia",
                    "Singapore",
                    "Slovakia",
                    "Slovenia",
                    "South Africa",
                    "Spain",
                    "Sri Lanka",
                    "Sweden",
                    "Switzerland",
                    "Thailand",
                    "Trinidad and Tobago",
                    "Turkey",
                    "Turkmenistan",
                    "Ukraine",
                    "United Arab Emirates",
                    "United Kingdom",
                    "United States of America",
                    "Uzbekistan",
                    "Vietnam"
                ]
            }
        }
    ],
    "transform": [
        { "filter": "datum.Entity == Country" },
        { "calculate": "datum.Consumption/datum.Population * 1000000", "as": "ConsumptionNorm" }
    ],
    "mark": { "type": "line" },
    "encoding": {
        "x": { "timeUnit": "year", "field": "Year", "type": "ordinal", "title": "" },
        "y":
            {
                "aggregate": "sum",
                "field": "ConsumptionNorm",
                "title": "Energy Consumption (MWh per capita)",
                "axis": {"title": "Energy Consumption (MWh per capita)", "titleFontSize": 14}
            },
        "color":
            { "field": "Source",
                "scale": {"scheme": "tableau10"},
                "sort": {"op": "sum", "field": "ConsumptionNorm"}
            },
        "tooltip": [
            { "field": "Source", "type": "nominal", "title": "Energy Source" },
            { "field": "ConsumptionNorm", "type": "quantitative", "title": "Consumption (MWh per capita)" }
        ]
        
    }
}
